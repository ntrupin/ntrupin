<aside class="-ml-[8px] mb-16 tracking-tight">
    <div class="lg:sticky lg:top-20">
        <nav id="nav" class="flex flex-row items-start relative px-0 pb-0 fade md:overflow-auto scroll-pr-6 md:relative">
            <div class="flex flex-row space-x-0 pr-10">
                {% for url, data in links.items() %}
                <a href="{{ url }}" class="transition-all hover:text-neutral-800 flex align-middle relative py-1 px-2 m-1">{{ data.name }}</a>
                {% endfor %}
            </div>
        </nav>
    </div>
</aside>

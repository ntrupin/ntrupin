<div class="timeline-list">
  {% for update in updates %}
  <div class="timeline-item">
    <p class="timeline-date">
      {{ update.date.strftime("%b") }}&nbsp;{{ update.date.year }}
    </p>
    <p class="timeline-text">
      {{ update.description }}
    </p>
  </div>
  {% endfor %}
</div>
{% if request.path != "/updates/" %}
<div class="updates-more">
  <a href="{{ url_for('updates') }}" class="updates-more-link">All updates â†’</a>
</div>
{% endif %}

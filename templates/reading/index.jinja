{% extends "base.jinja" %}
{% block content %}
<section class="page-section">
  <h1 class="page-title">Reading</h1>
  <p class="section-intro">Papers, books, and other links I find interesting.</p>
  <div class="collection-list">
    {% for reading in readings %}
    <a target="_blank" href="{{ reading.link }}" class="collection-item" rel="noopener noreferrer">
      <p class="collection-date">
        {{ reading.created_at.strftime("%b %d, %Y") }}
      </p>
      <p class="collection-title">
        {{ reading.text }}
      </p>
    </a>
    {% endfor %}
  </div>
</section>
{% endblock %}

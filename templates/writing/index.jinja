
{% extends "base.jinja" %}
{% block content %}
<section>
    <h1 class="mb-8 font-semibold text-2xl tracking-tighter">
        Writing
    </h1>
    <div class="space-y-3">
        {% for writing in writings %}
        <a href="{{ url_for('writing.show_canonical', name=writing.canonical_url) if writing.canonical_url else url_for('writing.show_id', id=writing.id) }}" class="block md:grid md:grid-cols-12 md:gap-x-4">
            <p class="text-neutral-600 tabular-nums md:col-span-3 md:self-start">
                {{ writing.published_at.strftime("%b %d, %Y") }}
            </p>
            <p class="text-neutral-900 font-semibold tracking-tight leading-snug md:col-span-9 md:self-start min-w-0">
                {{ writing.title }}
            </p>
        </a>
        {% endfor %}
    </div>
</section>
{% endblock %}

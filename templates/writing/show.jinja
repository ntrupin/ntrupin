{% extends "base.jinja" %}
{% block content %}
<script defer src="https://cdn.jsdelivr.net/npm/mathjax@4/tex-mml-chtml.js"></script>
<section>
    <h1 class="title font-semibold text-2xl tracking-tighter">
        {{ writing.title }}
        {% if writing.public == false %}
            <span class="text-red-400">(Private)</span>
        {% endif %}
    </h1>
    <div class="flex justify-between items-center mt-2 mb-8 text-sm">
        <p class="text-sm text-neutral-600">
            {{ writing.published_at.strftime("%B %d, %Y")  }}
            {% if writing.published_at != writing.updated_at %}
                | Updated {{ writing.updated_at.strftime("%B %d, %Y") }}
            {% endif %}
        </p>
    </div>
    <article class="prose">
        {{ writing.content }}
    </article>
</section>
<script src="{{ url_for('static', filename='js/sidenotes.js') }}"></script>
{% endblock %}

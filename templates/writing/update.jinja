{% extends "base.jinja" %}

{% from "writing/form.jinja" import form_for %}

{% block content %}
<section class="page-section">
  <h1 class="page-title">Edit Essay</h1>
  {{ form_for(request.form if request.form else writing) }}
  <form action="{{ url_for('writing.delete', id=writing.id) }}" method="post" class="delete-form">
    <button type="submit" class="button-danger" onclick="return confirm('Are you sure?');">Delete</button>
  </form>
</section>
{% endblock %}
